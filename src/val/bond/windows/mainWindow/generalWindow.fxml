<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:id="generalGridPane" xmlns="http://javafx.com/javafx/8.0.172" xmlns:fx="http://javafx.com/fxml/1" fx:controller="val.bond.windows.mainWindow.GeneralController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="50.0" maxHeight="50.0" vgrow="NEVER"/>
      <RowConstraints minHeight="10.0" prefHeight="${generalGridPane.height - 50.0}" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
       <ToolBar fx:id="appToolBar" prefHeight="40.0">
        <items>
            <Button mnemonicParsing="false" onAction="#MenuButtonClick" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0ab2f5;" text="">
               <font>
                  <Font name="Segoe MDL2 Assets" size="16.0" />
               </font>
            </Button>
        </items>
      </ToolBar >
       <GridPane fx:id="rightContentGridPane" alignment="BOTTOM_CENTER" GridPane.rowIndex="1" style="-fx-border-color: black;">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="546.0" minWidth="10.0" prefWidth="270.0" />
               <ColumnConstraints hgrow="SOMETIMES"  minWidth="10.0" prefWidth="822.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0"  prefHeight="30.0" vgrow="ALWAYS" />
           </rowConstraints>
           <children>
               <GridPane  fx:id="profileGridPane"  style="-fx-border-color: black;">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints maxHeight="354.0" minHeight="10.0" prefHeight="221.0" vgrow="SOMETIMES" />
                       <RowConstraints maxHeight="497.0" minHeight="10.0" prefHeight="497.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <children>
                       <HBox fx:id="profileHBox" style="-fx-border-color: black;" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER">
                           <VBox HBox.hgrow="ALWAYS" fx:id="avatarBox" alignment="CENTER">
                               <children>
                               <ImageView fitHeight="${generalGridPane.height/5}"  fitWidth="${generalGridPane.width/5}" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../../images/man.png" />
                                   </image>
                                   <effect>
                                       <InnerShadow blurType="GAUSSIAN" choke="1.0" height="5.0" radius="2.0" width="5.0" />
                                   </effect>
                               </ImageView>
                               </children>
                               <GridPane.margin>
                                   <Insets top="10.0" />
                               </GridPane.margin>
                           </VBox>
                           <VBox fx:id="profileLabelsBox" HBox.hgrow="ALWAYS" prefHeight="200.0" alignment="CENTER" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1">
                               <children>
                                   <Label fx:id="loginLabel" text="Логин:" wrapText="true">
                                       <font>
                                           <Font name="Helvetica Neue" size="15.0" />
                                       </font>
                                   </Label>
                                   <Label fx:id="loginValueLabel" layoutX="10.0" layoutY="10.0" text="login" wrapText="true">
                                       <font>
                                           <Font name="Helvetica Neue" size="15.0" />
                                       </font>
                                   </Label>
                                   <Label fx:id="emailLabel" layoutX="10.0" layoutY="10.0" text="Email:" wrapText="true">
                                       <font>
                                           <Font name="Helvetica Neue" size="15.0" />
                                       </font>
                                   </Label>
                                   <Label fx:id="emailValueLabel" layoutX="10.0" layoutY="29.0" text="email@mail.ru" wrapText="true">
                                       <font>
                                           <Font name="Helvetica Neue" size="15.0" />
                                       </font>
                                   </Label>
                                   <Button alignment="CENTER" mnemonicParsing="false" text="Сменить пользователя" textAlignment="CENTER" wrapText="true">
                                       <VBox.margin>
                                           <Insets top="30.0" />
                                       </VBox.margin>
                                   </Button>
                               </children>
                               <GridPane.margin>
                                   <Insets left="5.0" top="10.0" />
                               </GridPane.margin>
                           </VBox>
                       </HBox>
                       <TilePane fx:id="commandTilePane" prefColumns="3" vgap="20" hgap="50" tileAlignment="CENTER"
                                 GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.halignment="CENTER"
                                    alignment="TOP_CENTER">
                           <GridPane.margin>
                               <Insets top="10"/>
                           </GridPane.margin>
                       </TilePane>
                   </children>
               </GridPane>
               <GridPane fx:id="mainWorkSpaceGridPane" GridPane.vgrow="ALWAYS" style="-fx-border-color: black;" GridPane.columnIndex="1">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                       <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
                   </rowConstraints>
                   <children>
                       <BorderPane fx:id="editColBorderPane" minHeight="40.0" maxHeight="40" />
                       <GridPane fx:id="mapWorkGridPane" disable="true" visible="false"
                                 GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                           <Label text="Map Grid Pane" alignment="CENTER" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"
                                  style="-fx-font-family: 'Helvetica Neue'; -fx-font-size: 25;"
                                  textFill="white" GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>
                       </GridPane>
                       <GridPane fx:id="settingsWorkGridPane" disable="true" visible="false"
                                 GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" >
                           <Label text="Settings Grid Pane" alignment="CENTER" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"
                                  style="-fx-font-family: 'Helvetica Neue'; -fx-font-size: 25;"
                                  GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>
                       </GridPane>
                       <GridPane fx:id="collectionWorkGridPane" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                           <TilePane fx:id="collectionTilePane" hgap="20.0" vgap="10.0" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                               <GridPane.margin>
                                   <Insets top="20" left="10"/>
                               </GridPane.margin>
                           </TilePane>
                       </GridPane>
                   </children>
               </GridPane>
               <StackPane fx:id="darkStackPane" onMouseClicked="#darkStackPaneClick" disable="true" opacity="0.0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" style="-fx-background-color: black;"/>
               <VBox fx:id="sidePanel" translateX="-350" GridPane.columnSpan="2" maxWidth="300" GridPane.halignment="LEFT" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS"  >

                   <HBox fx:id="settingsSideHBox" onMouseClicked="#settingsSideHBoxMouseClick" alignment="CENTER_LEFT" spacing="50" GridPane.hgrow="ALWAYS" maxHeight="50" prefHeight="50">
                       <ImageView  style="-fx-border-color: black;" fitHeight="30" fitWidth="30">
                           <image>
                               <Image url="@../../images/settings_icon.png"/>
                           </image>
                       </ImageView>
                       <Label alignment="CENTER" text="Настройки" textFill="white">
                           <font>
                               <Font name="Helvetica Neue" size="16"/>
                           </font>
                           <effect>
                               <DropShadow radius="10" blurType="GAUSSIAN"/>
                           </effect>
                       </Label>

                       <padding>
                           <Insets left="10.0"/>
                       </padding>
                   </HBox>

                   <HBox fx:id="mapSideHBox" onMouseClicked="#mapSideHBoxMouseClick" alignment="CENTER_LEFT" spacing="50" GridPane.hgrow="ALWAYS" maxHeight="50" prefHeight="50">
                       <ImageView  style="-fx-border-color: black;" fitHeight="30" fitWidth="30">
                           <image>
                               <Image url="@../../images/map.png"/>
                           </image>
                       </ImageView>
                       <Label alignment="CENTER" text="Карта элементов" textFill="white">
                           <font>
                               <Font name="Helvetica Neue" size="16"/>
                           </font>
                           <effect>
                               <DropShadow radius="10" blurType="GAUSSIAN"/>
                           </effect>
                       </Label>

                       <padding>
                           <Insets left="10.0"/>
                       </padding>
                   </HBox>

                   <HBox fx:id="collectionSideHBox" onMouseClicked="#collectionSideHBoxMouseClick" alignment="CENTER_LEFT" spacing="50" GridPane.hgrow="ALWAYS" maxHeight="50" prefHeight="50">
                       <ImageView  style="-fx-border-color: black;" fitHeight="30" fitWidth="30">
                           <image>
                               <Image url="@../../images/blazer.png"/>
                           </image>
                       </ImageView>
                       <Label alignment="CENTER" text="Коллекция" textFill="white">
                           <font>
                               <Font name="Helvetica Neue" size="16"/>
                           </font>
                           <effect>
                               <DropShadow radius="10" blurType="GAUSSIAN"/>
                           </effect>
                       </Label>

                       <padding>
                           <Insets left="10.0"/>
                       </padding>
                   </HBox>

                   <effect>
                       <DropShadow blurType="GAUSSIAN" radius="20" offsetY="15"/>
                   </effect>
               </VBox>
           </children>
       </GridPane>
   </children>
</GridPane>
